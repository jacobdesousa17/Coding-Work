mixin navbar(user)
  nav.navbar.navbar-expand.navbar-light.bg-light
    a(href="/", aria-label="Golden Goose").navbar-brand.mr-0.mr-md-2
      img(src="/images/logo.png", width="36", height="36")
    .collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href="/") Home
        if user
          li.nav-item
            a.nav-link(href="/leads") Leads
    if user
      .navbar-right
        span.navbar-text Hello #{user.email}!
      .navbar-right
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/logout") Logout
    else
      .navbar-right
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/signup") Sign up
          li.nav-item
            a.nav-link(href="/login") Login